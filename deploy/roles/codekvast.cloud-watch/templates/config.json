{
	"logs": {
		"logs_collected": {
			"files": {
				"collect_list": [
					{
						"file_path": "/var/log/codekvast/application.log",
						"log_group_name": "{{ env }}"
					},
					{
						"file_path": "/var/log/codekvast/access.log",
						"log_group_name": "{{ env }}"
					},
					{
						"file_path": "/var/log/syslog",
						"log_group_name": "{{ env }}"
					}
				]
			}
		}
	},
	"metrics": {
		"append_dimensions": {
			"InstanceId": "${aws:InstanceId}",
		},
		"metrics_collected": {
			"cpu": {
				"measurement": [
					"cpu_usage_idle",
					"cpu_usage_iowait",
					"cpu_usage_user",
					"cpu_usage_system"
				],
				"metrics_collection_interval": 60,
				"totalcpu": false
			},
			"disk": {
				"measurement": [
					"used_percent",
					"inodes_free"
				],
				"metrics_collection_interval": 60,
				"resources": [
					"*"
				]
			},
			"diskio": {
				"measurement": [
					"io_time"
				],
				"metrics_collection_interval": 60,
				"resources": [
					"/",
					"/tmp"
				]
			},
			"mem": {
				"measurement": [
					"mem_used_percent"
				],
				"metrics_collection_interval": 60
			},
			"swap": {
				"measurement": [
					"swap_used_percent"
				],
				"metrics_collection_interval": 60
			}
		}
	}
}
